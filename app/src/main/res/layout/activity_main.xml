<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_add_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_add_time" />

        <Button
            android:id="@+id/button_add_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_add_description" />

        <Button
            android:id="@+id/button_add_links"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_add_links" />

        <Button
            android:id="@+id/button_copy_to_clipboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_copy_to_clipboard" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>